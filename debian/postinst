#!/bin/sh
# postinst script for netbeans-php-support
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

setxdebug() {
    XDI=$1
        grep -q -e 'xdebug.remote_enable' $XDI || echo 'xdebug.remote_enable = 1' >> $XDI
        grep -q -e 'xdebug.remote_handler' $XDI || echo 'xdebug.remote_handler=dbgp' >> $XDI
        grep -q -e 'xdebug.remote_mode' $XDI || echo 'xdebug.remote_mode=req' >> $XDI
        grep -q -e 'xdebug.remote_host' $XDI || echo 'xdebug.remote_host=127.0.0.1' >> $XDI
        grep -q -e 'xdebug.remote_port' $XDI || echo 'xdebug.remote_port=9000' >> $XDI
        grep -q -e 'xdebug.file_link_format' $XDI || echo 'xdebug.file_link_format = "netbeans://%f?line=%l"' >> $XDI
        grep -q -e 'xdebug.profiler_enable' $XDI || echo 'xdebug.profiler_enable = 0' >> $XDI
#        grep -q -e '' $XDI || echo '' >> $XDI        
}


case "$1" in
    configure)

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

if [ -f /usr/bin/xdg-desktop-menu ]; then
    xdg-desktop-menu install --novendor /usr/share/applications/netbeans.desktop > /dev/null || true
fi


exit 0
